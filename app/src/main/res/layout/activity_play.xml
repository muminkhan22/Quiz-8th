<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".playActivity"
    android:background="@drawable/back">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/preview"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/q_back"
        android:fontFamily="@font/agbalumo"
        android:gravity="center"
        android:padding="15sp"
        android:text="Hear is your Question ?"
        android:textColor="#000405"
        android:textSize="25dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/optionBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/q_back"
            android:text="Option 1"
            android:textColor="#090808"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/agbalumo"/>

        <RadioButton
            android:id="@+id/optionBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/q_back"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/agbalumo"/>


        <RadioButton
            android:id="@+id/optionBtn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#0A090A"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/q_back"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/agbalumo"/>

        <RadioButton
            android:id="@+id/optionBtn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 4"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#121212"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/q_back"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/agbalumo"/>

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextQusestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/next_edit"
        android:fontFamily="@font/agbalumo"
        android:text="Next "
        android:textColor="#FBF8F8"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"/>






</LinearLayout>